<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JobDetailActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_parent"
        android:layout_marginHorizontal="@dimen/padding_parent"
        android:orientation="horizontal"
        android:translationZ="2dp"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:elevation="0dp"
            android:text="Close"
            android:textAllCaps="false"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp"

            />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="Save"
            android:textAllCaps="false"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp"

            />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="7dp"
            android:layout_weight="3"
            android:backgroundTint="@color/black"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:strokeColor="@color/text_secondary"
            app:strokeWidth="1dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f6f9fc"
                    android:elevation="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UselessParent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/companyLogo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="@dimen/padding_parent"
                        android:layout_marginTop="@dimen/padding_parent"
                        android:layout_marginBottom="@dimen/padding_parent"
                        android:background="@color/text"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/logo" />
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_parent"
                        android:layout_marginStart="@dimen/padding_parent"
                        android:layout_marginTop="@dimen/padding_parent"
                        android:layout_marginEnd="@dimen/padding_parent"
                        android:layout_marginBottom="@dimen/padding_parent"
                        android:layout_toEndOf="@id/companyLogo"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:ellipsize="end"
                            android:text="Somino Solutions"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/overview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Democratizing data dasd dlorem for teams around the world âœ¨"
                                android:textColor="@color/text"
                                android:textSize="@dimen/text_normal" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/padding_parent"
                                android:layout_marginVertical="@dimen/padding_parent_small"
                                android:text="About the job"
                                android:textColor="@color/black"
                                android:textStyle="bold"></TextView>

                            <TextView
                                android:id="@+id/jobDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/padding_parent"
                                android:text="@string/jd_sample"
                                android:textColor="@color/text_secondary"></TextView>

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:paddingTop="@dimen/padding_parent_small"
                                android:paddingBottom="@dimen/padding_parent_small" />

                            <!--                expand job details-->
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/padding_parent"
                                android:layout_marginVertical="@dimen/padding_parent_small"
                                android:text="Job Details"
                                android:textColor="@color/black"
                                android:textStyle="bold"></TextView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/padding_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="10dp"
                                android:elevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:layout_marginVertical="@dimen/padding_parent_small"
                                            android:text="Company"
                                            android:textColor="@color/text"
                                            android:textStyle="bold"></TextView>

                                       <LinearLayout
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content">
                                           <TextView
                                               android:id="@+id/companyName"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:layout_marginHorizontal="@dimen/padding_parent"
                                               android:text="Pom Jsc"
                                               android:textColor="@color/text_secondary"></TextView>
                                           <TextView
                                               android:id="@+id/companySize"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:layout_marginHorizontal="@dimen/padding_parent"
                                               android:text="Pom Jsc"
                                               android:textColor="@color/text_secondary"></TextView>
                                       </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:layout_marginVertical="@dimen/padding_parent_small"
                                            android:text="Location"
                                            android:textColor="@color/text"
                                            android:textStyle="bold"></TextView>

                                        <TextView
                                            android:id="@+id/location"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:text="Remote - Hanoi"
                                            android:textColor="@color/text_secondary"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:layout_marginVertical="@dimen/padding_parent_small"
                                            android:text="Skill"
                                            android:textColor="@color/text"
                                            android:textStyle="bold"></TextView>

                                        <TextView
                                            android:id="@+id/skills"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:text="Remote - Hanoi"
                                            android:textColor="@color/text_secondary"></TextView>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/padding_parent"
                                        android:orientation="vertical"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:layout_marginVertical="@dimen/padding_parent_small"
                                            android:text="Year of Experience"
                                            android:textColor="@color/text"
                                            android:textStyle="bold"></TextView>

                                        <TextView
                                            android:id="@+id/yearOfExperience"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginHorizontal="@dimen/padding_parent"
                                            android:text="5+ years"
                                            android:textColor="@color/text_secondary"></TextView>

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/padding_parent"
                                android:layout_marginVertical="@dimen/padding_parent_small"
                                android:text="Hiring Contact"
                                android:textColor="@color/black"
                                android:textStyle="bold"></TextView>

                            <LinearLayout
                                android:id="@+id/card"
                                android:padding="@dimen/padding_parent"
                                android:layout_width="match_parent"
                                android:soundEffectsEnabled="true"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#48DDDDDD"
                                    android:orientation="horizontal"
                                    tools:ignore="UselessParent">
                                    <com.google.android.material.card.MaterialCardView
                                        android:id="@+id/avatar"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginStart="@dimen/padding_parent"
                                        android:layout_marginTop="@dimen/padding_parent"
                                        app:cardCornerRadius="100dp"
                                        android:background="@color/text"
                                        app:cardElevation="2dp">

                                        <ImageView
                                            android:id="@+id/avatarUrl"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_baseline_face_24" />
                                    </com.google.android.material.card.MaterialCardView>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/padding_parent"
                                        android:layout_marginStart="@dimen/padding_parent"
                                        android:layout_marginTop="@dimen/padding_parent"
                                        android:layout_marginEnd="@dimen/padding_parent"
                                        android:layout_marginBottom="@dimen/padding_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/contactName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="3dp"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:text="Somino Solutions"
                                            android:textColor="@color/text"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />


                                        <TextView
                                            android:id="@+id/role"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:text="New York City, USA"
                                            android:textColor="@color/text"
                                            android:textSize="@dimen/text_normal" />

                                        <TextView
                                            android:id="@+id/email"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:maxLines="2"
                                            android:layout_marginTop="3dp"
                                            android:text="New York City, USA"
                                            android:textColor="@color/text"
                                            android:textSize="@dimen/text_normal" />



                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>