<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="13dp"
        app:cardElevation="0dp"
        app:strokeColor="#F1F1F1"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f6f9fc"
                tools:ignore="UselessParent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/companyLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@color/text"
                    app:cardElevation="2dp"
                    android:layout_marginStart="@dimen/padding_parent"
                    android:layout_marginTop="@dimen/padding_parent"
                    >

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

<!--                                        <com.facebook.shimmer.ShimmerFrameLayout-->
<!--                                            android:layout_width="match_parent"-->
<!--                                            android:layout_height="match_parent"-->
<!--                                            app:shimmer_auto_start="false"-->
<!--                                            app:shimmer_duration="500">-->
<!--                                            <View-->
<!--                                                android:layout_width="match_parent"-->
<!--                                                android:layout_height="match_parent"-->
<!--                                                android:layout_gravity="center"-->
<!--                                                android:background="@color/secondary">-->

<!--                                            </View>-->
<!--                                        </com.facebook.shimmer.ShimmerFrameLayout>-->

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padding_parent"
                    android:layout_marginStart="@dimen/padding_parent"
                    android:layout_marginTop="@dimen/padding_parent"
                    android:layout_marginEnd="@dimen/padding_parent"
                    android:layout_marginBottom="@dimen/padding_parent"
                    android:layout_toEndOf="@id/companyLogo"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Somino Solutions"
                        android:textColor="@color/text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                      >

                        <!--                        <ImageView-->
                        <!--                            android:id="@+id/iconCompany"-->
                        <!--                            android:layout_width="15dp"-->
                        <!--                            android:layout_height="16dp"-->
                        <!--                            android:layout_marginEnd="5dp"-->
                        <!--                            android:src="@drawable/ic_baseline_business_24"-->
                        <!--                            app:tint="@color/text" />-->

                        <TextView
                            android:id="@+id/overview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Democratizing data dasd dlorem for teams around the world âœ¨"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_normal" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:id="@+id/icon_employees"
                            android:layout_width="14dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_employes" />

                        <TextView
                            android:id="@+id/employees"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_toEndOf="@id/icon_employees"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="11-50 Employees"
                            android:textColor="@color/ic_color"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:layout_toEndOf="@id/companyLogo"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Golang Developer"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="3dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    >

                    <ImageView
                        android:id="@+id/iconLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_baseline_location_on_24" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iconLocation"
                        android:id="@+id/location"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/ic_color"
                        android:text="Hanoi, Vietnam"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:id="@+id/iconMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_baseline_attach_money_24" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iconMoney"
                        android:id="@+id/salary"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/ic_color"
                        android:textStyle="bold"
                        android:text="10K - 50K"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_baseline_calendar_month_24" />

                    <TextView
                        android:id="@+id/create_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/calendar"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Posted 2 week ago"
                        android:textColor="@color/ic_color"
                        android:textSize="@dimen/text_normal" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/create_at"
                        android:layout_marginRight="@dimen/padding_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/save_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_toStartOf="@id/apply_button"
                            android:layout_weight="1"
                            android:backgroundTint="@color/white"
                            android:text="Save"
                            android:textAllCaps="false"
                            app:strokeColor="@color/text_secondary"
                            app:strokeWidth="1dp"

                            />

                        <Button
                            android:id="@+id/apply_button"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="7dp"
                            android:backgroundTint="@color/black"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:strokeColor="@color/text_secondary"
                            app:strokeWidth="1dp" />
                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>